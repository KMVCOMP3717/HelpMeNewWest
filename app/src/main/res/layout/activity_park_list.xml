<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_park_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="set3r.kmv.ca.helpmenewwest.ParkList">

    <Button
        android:text="Park number 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plist1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:onClick="toListItemOnClick" />

    <Button
        android:text="Park number 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plist1"
        android:layout_alignEnd="@+id/plist1"
        android:id="@+id/plist2"
        android:onClick="toListItemOnClick" />

    <Button
        android:text="Park Number 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plist3"
        android:layout_below="@+id/plist2"
        android:layout_alignStart="@+id/plist2"
        android:onClick="toParkTemplateOnClick" />

    <Button
        android:text="park number 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plist4"
        android:layout_below="@+id/plist3"
        android:layout_alignStart="@+id/plist3"
        android:onClick="toListtemOnClick" />
</RelativeLayout>
