<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_park"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="set3r.kmv.ca.helpmenewwest.Park"
    android:layout_gravity="fill_horizontal">

    <Button
        android:text="Queen's Park\n2.2 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:id="@+id/park2"
        android:background="@drawable/park"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:gravity="bottom|left"
        android:onClick="toParkTemplateOnClick" />

    <Button
        android:text="Pier Park\n0.1 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/park1"
        android:background="@drawable/park"
        android:layout_marginStart="16dp"
        android:gravity="bottom|left"
        android:layout_alignTop="@+id/park2"
        android:layout_alignParentStart="true"
        android:onClick="toParkTemplateOnClick" />

    <Button
        android:text="Moody Park\n2.2 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/park1"
        android:layout_alignStart="@+id/park1"
        android:layout_marginTop="27dp"
        android:id="@+id/park3"
        android:gravity="bottom|left|center_vertical|center_horizontal"
        android:background="@drawable/park"
        android:onClick="toParkTemplateOnClick" />

    <Button
        android:text="Edmonds Park\n3.2 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/park4"
        android:background="@drawable/park"
        android:layout_alignTop="@+id/park3"
        android:layout_alignStart="@+id/park2"
        android:gravity="bottom|left"
        android:onClick="toParkTemplateOnClick" />

    <Button
        android:text="Show by list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/park3"
        android:layout_marginTop="25dp"
        android:id="@+id/parklistbtn"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:layout_alignStart="@+id/park3"
        android:onClick="toParkListOnClick" />
</RelativeLayout>
